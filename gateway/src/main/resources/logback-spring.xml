<configuration>
    <!-- Define log directory -->
    <property name="LOG_HOME" value="gateway/log" />

    <!-- General log configuration -->
    <appender name="GENERAL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Static file path -->
        <file>${LOG_HOME}/general.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Dynamic date in fileNamePattern, not in the file path -->
            <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/general.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Ensure missing directories are created -->
        <prudent>true</prudent>
    </appender>

    <!-- GATEWAY log configuration -->
    <appender name="GATEWAY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/gateway.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/gateway.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Ensure missing directories are created -->
        <prudent>true</prudent>
    </appender>

    <!-- Console Appender for logging to console with color output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %magenta(%-5level) %green([%-50.50class]) >>> %cyan(%msg) %n
            </pattern>
        </encoder>
    </appender>

    <!-- Logger for GATEWAY-specific logs -->
    <logger name="GATEWAY" level="info" additivity="false">
        <appender-ref ref="GATEWAY" />
    </logger>

    <!-- Root logger for general logs and console output -->
    <root level="info">
        <appender-ref ref="GENERAL" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
